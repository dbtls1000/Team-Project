<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri ="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<c:set var="rootPath" value="${pageContext.request.contextPath}"/>
<%@	taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<% pageContext.setAttribute("newLine", "\r\n"); %>
<script>
	$(function(){
		$("#btn_delete").click(function () {
			location.replace("${rootPath}/board/delete?b_seq=${BVIEW.b_seq}")
		})
	})
</script>
<style>
	div.thumb-container{
		display: flex;
		flex-flow: wrap;
		width: 100%;
	}
	div.thumb-box{
		flex:0 1 150px; 
		width: 150px;
		height:150px;
		overflow: hidden;
	}
	div.thumb-box img{
		width: 100%;
	}
</style>
<table class="board">
	<tr>
		<th>작성시각</th>
		<td>${BVIEW.b_time}</td>
		<th>작성일</th>
		<td>${BVIEW.b_date}</td>
	</tr>
	<tr>
		<th>작성자</th>
		<td colspan="3">${BVIEW.b_auth}</td>
	</tr>
	<tr>
		<th>제목</th>
		<td colspan="3">${BVIEW.b_title}</td>
	</tr>
	<tr>
		<th>내용</th>
		<td colspan="3">${fn:replace(BVIEW.b_content,newLine,"<br/>")}</td>
	</tr>
	<c:if test="${not empty BVIEW.b_files}">
		<tr>
			<th>파일</th>
			<td colspan="3">
				<div class="thumb-container">
					<c:forEach items="${BVIEW.b_files}" var="file">
						<div class="thumb-box">
							<img src="${rootPath}/images/${file.file_name}">						
						</div>
					</c:forEach>				
				</div>
			</td>
		</tr>
	</c:if>
</table>
<div class="button">
	<button id="btn_update">수정</button>
	<button id="btn_delete">삭제</button>
</div>